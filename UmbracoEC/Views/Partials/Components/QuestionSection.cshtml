@using UmbracoEC.ViewModels
@model QuestionFormViewModel

@{
    Html.ViewData.TemplateInfo.HtmlFieldPrefix = "question";

    var formVM = Model ?? new QuestionFormViewModel();
}

<div class="flex flex-col gap-4 relative overflow-hidden mt-8 rounded w-full">

    <h2 class="text-primary text-[1.375rem] font-semibold mt-2">
        Have a question?
    </h2>

    @await Html.PartialAsync("Partials/Forms/_QuestionForm", formVM)

    @if (TempData["FormSuccess"] != null)
    {
        <div class="success">@TempData["FormSuccess"]</div>
    }
    else if (TempData["FormError"] != null)
    {
        <div class="error">@TempData["FormError"]</div>
    }
</div>
