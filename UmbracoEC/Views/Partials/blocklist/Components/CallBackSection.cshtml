@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Persistence
@{
    var content = (ContentModels.CallBackSection)Model.Content;
    
}

<section class="relative bg-white-100 pb-[10rem]">

    <div class="container flex justify-between items-center gap-8 relative">

        <div class="flex-1 flex flex-col justify-center gap-4 pt-[6rem]">
            <div class="text-[.875rem] text-secondary uppercase">@content.CallBackLabel</div>

            <div class="rte">
                <h3>@Html.Raw(content.CallBackTitle)</h3>
            </div>

            <div class="rte">
                <h4>@Html.Raw(content.CallBackSubtitle)</h4>
            </div>

            <p class="text-body-text">@Html.Raw(content.CallBackText)</p>

            @if (content.CallBackSignatureImage != null)
            {
                <img class="max-w-[200px] mt-6" src="@content.CallBackSignatureImage.Url()" alt="@content.CallBackSignatureImage.Name" />
            }

            <div class="mt-2 text-body-text">
                <span class="font-bold">@Html.Raw(content.CallBackPersonName)</span>
                <span> - </span>
                <span>@Html.Raw(content.CallBackPersonRole)</span>
            </div>
        </div>

        <div class="w-[420px]">
            <div class="bg-white-100 shadow-xl rounded overflow-hidden">

                <div class="bg-primary text-white px-8 py-6">
                    <h3 class="text-3xl font-bold">@Html.Raw(content.CallBackFormLabel)</h3>
                </div>

                <div class="p-8 flex flex-col gap-4">
                    <p class="text-gray-600">@Html.Raw(content.CallBackFormText)</p>

                    <input class="w-full border border-border placeholder:text-gray-500 text-body-text bg-transparent px-4 py-3 rounded focus:outline-none focus:border-primary" placeholder="Name" />
                    <input class="w-full border border-border placeholder:text-gray-500 text-body-text bg-transparent px-4 py-3 rounded focus:outline-none focus:border-primary" placeholder="Email address" />
                    <input class="w-full border border-border placeholder:text-gray-500 text-body-text bg-transparent px-4 py-3 rounded focus:outline-none focus:border-primary" placeholder="Phone" />

                    @if (content.CallBackFormDropdownMenu != null && content.CallBackFormDropdownMenu.Any())
                    {
                        <select class="w-full border border-border text-body-text bg-transparent px-4 py-3 rounded focus:outline-none focus:border-primary">
                            @foreach (var item in content.CallBackFormDropdownMenu)
                            {
                                <option>@item</option>
                            }
                        </select>
                    }

                    <button class="mt-4 bg-[#E8E0CE] hover:bg-[#ddd3b9] text-primary font-bold py-3 rounded transition">
                        Submit
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

