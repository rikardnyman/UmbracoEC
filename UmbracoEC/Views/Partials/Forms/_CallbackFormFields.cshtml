@using UmbracoEC.ViewModels
@model CallbackFormViewModel

<div class="flex flex-col gap-6">

    <div class="flex flex-col">
        <label asp-for="Name" class="sr-only"></label>
        <input asp-for="Name"
               type="text"
               placeholder="@Html.DisplayNameFor(x => x.Name)"
               class="w-full h-[50px] px-4 border border-gray-300 rounded-md
                      text-sm italic text-gray-600 focus:ring-2 focus:ring-primary focus:outline-none" />
        <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
    </div>

    <div class="flex flex-col">
        <label asp-for="Email" class="sr-only"></label>
        <input asp-for="Email"
               type="text"
               placeholder="@Html.DisplayNameFor(x => x.Email)"
               class="w-full h-[50px] px-4 border border-gray-300 rounded-md
                      text-sm italic text-gray-600 focus:ring-2 focus:ring-primary focus:outline-none" />
        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
    </div>

    <div class="flex flex-col">
        <label asp-for="Phone" class="sr-only"></label>
        <input asp-for="Phone"
               type="text"
               placeholder="@Html.DisplayNameFor(x => x.Phone)"
               class="w-full h-[50px] px-4 border border-gray-300 rounded-md
                      text-sm italic text-gray-600 focus:ring-2 focus:ring-primary focus:outline-none" />
        <span asp-validation-for="Phone" class="text-red-600 text-sm"></span>
    </div>

    <div class="flex flex-col relative">
        <label asp-for="SelectedOption" class="sr-only"></label>

        <select asp-for="SelectedOption"
                class="appearance-none w-full h-[50px] px-4 pr-10 border border-gray-300 rounded-md
                       text-sm italic text-gray-600 focus:ring-2 focus:ring-primary focus:outline-none">

            <option value="" disabled hidden selected>Please select an option</option>

            @foreach (var o in Model.Options)
            {
                <option value="@o">@o</option>
            }
        </select>

        <span class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 text-gray-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
            </svg>
        </span>

        <span asp-validation-for="SelectedOption" class="text-red-600 text-sm"></span>
    </div>

</div>
